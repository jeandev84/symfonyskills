{% extends 'base.html.twig' %}

{% block title %}Github Repositories!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Github Repositoriesâœ…</h1>
    <ul>
        {% for repository in repositories %}
            <li style="color: #718C00;">Name: {{ repository.name }}</li>
            <li style="color: #00B8F5;">Description: {{ repository.description ? repository.description|slice(0,30) ~ '...' : 'No description for this one !' }}</li>
            <li>
                <a href="{{ path('api.v1.show', {id: repository.id}) }}">Details</a> || <a href="https://github.com/jeandev84/{{ repository.name }}">Voir sur Github</a>
            </li>
            <hr>
        {% endfor %}
    </ul>
</div>
{% endblock %}
